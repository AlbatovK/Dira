<resources>

    <style name="Theme.KPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="colorPrimary">@color/dark_cyan</item>
        <item name="colorPrimaryVariant">@color/dark_cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_cyan</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:navigationBarDividerColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:colorBackground">@color/light_cyan</item>
    </style>

    <style name="BottomNav" parent="Theme.KPlanner">
        <item name="android:backgroundTint">@color/dimgrey</item>
    </style>

    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.KPlanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.KPlanner">
        <item name="android:textColorSecondary">@color/dark_cyan</item>
    </style>

    <style name="CardTextStyleTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardTextStyleData" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NoteCardTextStyleTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NoteCardTextStyleData" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.KPlanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@color/dark_cyan</item>
    </style>

    <style name="Theme.KPlanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarTextAppearance">
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textColor">@color/dark_cyan</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>