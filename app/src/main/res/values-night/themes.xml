<resources>

    <style name="Theme.KPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="colorPrimary">@color/purple_standard</item>
        <item name="colorPrimaryVariant">@color/purple_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:editTextColor">@color/purple_standard</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorSecondaryVariant">@color/purple_accent</item>
        <item name="colorOnSecondary">@color/purple_accent</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/dimgrey</item>
        <item name="android:navigationBarDividerColor">@color/dimgrey</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="AppBarStyle">@style/AppBarTextAppearanceDark</item>
        <item name="AppBarTextColor">@color/purple_standard</item>
        <item name="logoTintColor">@color/purple_standard</item>
        <item name="android:colorBackground">@color/grey_500</item>
        <item name="EditTextColor">@color/dimgrey</item>
        <item name="SelectedItemBackground">@color/dimgrey</item>
    </style>

    <attr name="EditTextColor" format="color|reference" />

    <attr name="SelectedItemBackground" format="color|reference" />

    <attr name="logoTintColor" format="color|reference" />

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.KPlanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.KPlanner">
        <item name="android:textColorSecondary">?attr/AppBarTextColor</item>
    </style>

    <style name="CardTextStyleTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CardTextStyleData" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NoteCardTextStyleTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NoteCardTextStyleData" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.KPlanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/purple_standard</item>
    </style>

    <style name="Theme.KPlanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <attr name="AppBarStyle" format="reference" />
    <attr name="AppBarTextColor" format="color|reference" />

    <style name="AppBarTextAppearanceDark">
        <item name="android:fontFamily">@font/navigo_medium</item>
        <item name="android:textColor">@color/purple_standard</item>
        <item name="color">@color/purple_accent</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>